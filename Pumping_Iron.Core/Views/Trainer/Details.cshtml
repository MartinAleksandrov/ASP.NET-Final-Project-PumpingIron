@model TrainerDetailsViewModel


@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Details.css" asp-append-version="true">

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            <img src="@Model.ImageUrl" class="img-fluid big-picture" alt="Big Picture">
        </div>
        <div class="col-lg-6">
            <div class="details">
                <h2 class="name">@Model.Name</h2>
                <p class="information">@Model.Information</p>
                <a asp-action="AllTrainers" asp-controller="Trainer" class="btn btn-lg btn-success rounded-pill">Go Back</a>
            </div>
        </div>
    </div>
</div>