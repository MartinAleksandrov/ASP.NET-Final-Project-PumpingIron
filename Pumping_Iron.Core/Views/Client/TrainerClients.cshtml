@model IEnumerable<MyClientsViewModel>

@{
    ViewData["Title"] = "My Clients";
}

<link rel="stylesheet" href="~/css/MyClients.css">

<div class="container">
    <h2 class="title">@ViewData["Title"]</h2>
    <hr />

    @foreach (var client in Model)
    {
        <div class="client-card">
            <div class="client-info">
                <h4>@client.Name</h4>
                <p><strong>Age:</strong> @client.Age</p>
                <p><strong>Gender:</strong> @client.Gender</p>
                <p><strong>Membership:</strong> @client.MembershipName</p>
                @if (client.TrainingProgram != null)
                {
                    <!-- Button for Client Program -->
                    <a asp-controller="TrainingProgram" asp-action="Details" asp-route-id="@client.TrainingProgram.Id" class="btn">Program Details</a>
                    <a asp-controller="Trainer" asp-action="RemoveProgram" asp-route-id="@client.TrainingProgram.Id" class="btn">Remove Program</a>
                }
                else
                {
                    <a asp-controller="Trainer" asp-action="AddProgram" asp-route-id="@client.ClientId" class="btn">Add Program</a>
                }
                @if (client.Diet != null)
                {
                    <!-- Button for Client Diet -->
                    <a asp-controller="Diet" asp-action="Details" asp-route-id="@client.Diet.Id" class="btn">Diet Details</a>
                    <a asp-controller="Trainer" asp-action="RemoveDiet" asp-route-id="@client.Diet.Id" class="btn">Remove Diet</a>
                }
                else
                {
                    <a asp-controller="Trainer" asp-action="AddDiet" asp-route-id="@client.ClientId" class="btn">Add Diet</a>
                }
            </div>
            <div class="client-image-container">
                <img src="@client.ImageUrl" alt="Client Image" class="client-image" />
            </div>
        </div>
        <hr />
    }
</div>
